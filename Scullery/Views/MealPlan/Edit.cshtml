@model Scullery.Models.ScheduledMeal

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assign Planner</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduledMealId" />
            <input type="hidden" asp-for="AssignedPlannerId" />
            <input type="hidden" asp-for="SavedRecipeId" />
            <input type="hidden" asp-for="MealPlanId" />
            <input type="hidden" asp-for="DateOfMeal" />
            <input type="hidden" asp-for="Slot" />
            <input type="hidden" asp-for="MealCompleted" />
            <input type="hidden" asp-for="Planned" />
            <input type="hidden" asp-for="MealType" />
            <div class="form-group">
                <label asp-for="PlannerName">Planner Name</label>
                <select asp-for="PlannerName" class="form-control" asp-items="@Model.Planners"></select>
                <span asp-validation-for="PlannerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



