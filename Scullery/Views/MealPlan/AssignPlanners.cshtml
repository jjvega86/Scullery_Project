@model IEnumerable<Scullery.Models.ScheduledMeal>

@{
    ViewData["Title"] = "AssignPlanners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Assign Planners</h1>


<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.DateOfMeal)
            </th>      
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfMeal)
            </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@item.ScheduledMealId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ScheduledMealId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ScheduledMealId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
