@model IEnumerable<Scullery.Models.ViewModels.MealEvent>
@{
    ViewData["Title"] = "GetMealSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-12 text-center"><h1 class="text-primary">Scheduled Meals</h1></div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <table class="table text-center border-top-0">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <h4 class="text-primary">@item.MealDate.Value.ToString("MM/dd/yyyy")</h4>
                            </th>
                            <td>
                                <div class="card border-primary mb-3 text-primary text-center">
                                    @if (item.MealType == "Planned")
                                    {
                                        <div class="card-header bg-secondary text-light">
                                            @if (item.Slot == 1)
                                            {
                                                <h5>Breakfast</h5>
                                            }
                                            else if (item.Slot == 2)
                                            {
                                                <h5>Lunch</h5>

                                            }
                                            else
                                            {
                                                <h5>Dinner</h5>
                                            }
                                        </div>
                                        <div class="card-body">
                                            <a href="@item.RecipeUrl" class="stretched-link text-primary bg-light"> <h4 class="card-header"> @item.RecipeName </h4></a>
                                        </div>
                                        <div class="card-footer"><h5><strong>@item.PlannerName</strong></h5></div>



                                    }
                                    else
                                    {
                                        <div class="card-header bg-secondary text-light">
                                            @if (item.Slot == 1)
                                            {
                                                <h5>Breakfast</h5>
                                            }
                                            else if (item.Slot == 2)
                                            {
                                                <h5>Lunch</h5>

                                            }
                                            else
                                            {
                                                <h5>Dinner</h5>
                                            }
                                        </div>
                                        <div class="card-body">
                                            <h5><strong>@item.MealType</strong> </h5>
                                        </div>

                                    }
                                </div>
                            </td>                       
                            <td class="text-center">
                                <form asp-controller="MealPlan" asp-action="Plan" method="get" asp-route-id="@item.ScheduledMealId">
                                    <button type="submit" class="btn btn-outline-primary">Modify Meal</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

