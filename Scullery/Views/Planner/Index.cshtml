@model Scullery.Models.ViewModels.TodaysMeals
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-10">
            <h3 class="text-left text-primary">
                Welcome, @Html.DisplayFor(model => model.PlannerName)!
            </h3>
        </div>
        <div class="col-md-2">
            <input type="button" class="btn btn-outline-primary" value="Create Meal Plan" onclick="location.href='@Url.Action("Create", "MealPlan")'" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="card-columns">
                @foreach (Scullery.Models.ViewModels.MealCard card in Model.MealCards)
                {

                <div class="card">
                    <div class="card-img" style="background-image: url('@card.ImgUrl')"></div>
                    <h3 class="card-header">
                        @if (card.MealSlot == 1)
                        {
                            <span>Breakfast</span>
                        }
                        else if (card.MealSlot == 2)
                        {
                            <span>Lunch</span>
                        }
                        else
                        {
                            <span>Dinner</span>
                        }
                    </h3>
                    <div class="card-body">
                        <h5 class="card-title">Assigned Cook</h5>
                        <h6 class="card-subtitle text-muted">@card.CookName</h6>
                    </div>
                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>

                </div>
                

                }
            </div>
        </div>
        
    </div>





</div>



