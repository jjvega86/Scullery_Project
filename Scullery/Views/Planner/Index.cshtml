@model Scullery.Models.ViewModels.TodaysMeals
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-10">
            <h3 class="text-left text-primary">
                Welcome, @Html.DisplayFor(model => model.PlannerName)!
            </h3>
        </div>
        <div class="col-md-2">
            <input type="button" class="btn btn-outline-primary" value="Create Meal Plan" onclick="location.href='@Url.Action("Create", "MealPlan")'" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="card-columns">
                @foreach (Scullery.Models.ViewModels.MealCard card in Model.MealCards)
                {

                    <div class="card">
                        <div class="card-img" style="background-image: url('@card.ImgUrl')"></div>
                        <div class="card-body">
                            <div class="card-title">@card.CookName</div>
                        </div>
                    </div>

                }
            </div>
        </div>
        
    </div>





</div>



