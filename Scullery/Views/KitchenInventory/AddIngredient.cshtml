@model Scullery.Models.Ingredient

@{
    ViewData["Title"] = "AddIngredient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Your Ingredient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddIngredient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="KitchenInventoryId" type="hidden" />
            <input asp-for="SpoonacularIngredientId" type="hidden" />
            <div class="form-group">
                <label asp-for="IngredientName" class="control-label"></label>
                <input asp-for="IngredientName" class="form-control" />
                <span asp-validation-for="IngredientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitType" class="control-label"></label>
                <input asp-for="UnitType" class="form-control" />
                <span asp-validation-for="UnitType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitQuantity" class="control-label"></label>
                <input asp-for="UnitQuantity" class="form-control" />
                <span asp-validation-for="UnitQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


