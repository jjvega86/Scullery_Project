@model Scullery.Models.SavedRecipe
@{
    ViewData["Title"] = "RecipeInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Recipe Information</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Save" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RecipeName"/>
        <input type="hidden" asp-for="ImageURL"/>
        <input type="hidden" asp-for="PlannerId"  />
        <input type="hidden" asp-for="RecipeURL"  />
        <input type="hidden" asp-for="SpoonacularRecipeId"  />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    
</div>

