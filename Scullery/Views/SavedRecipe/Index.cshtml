@model IEnumerable<Scullery.Models.SavedRecipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Recipes</h1>


    <form asp-controller="SavedRecipe" asp-action="SearchResults">
        <p>
            Search For Recipes: <input type="text" name="SearchString">
            <input type="submit" value="Search" />
        </p>
    </form>
<table class="table">
    <thead>
        <tr>
            <th>
                Recipe 
            </th>
           <th>

           </th>
            <th>
                Recipe Source
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeName)
                </td>
                <td>
                 <img src="@Url.Content(item.ImageURL)" alt="Image">
                </td>
                <td>
                    <button href="@Url.Content(item.RecipeURL)" type="button" class="btn btn-outline-success">Open Recipe</button>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SavedRecipeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SavedRecipeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
