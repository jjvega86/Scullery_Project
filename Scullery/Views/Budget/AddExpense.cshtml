@model Scullery.Models.ViewModels.BudgetExpenseAmount

@{
    ViewData["Title"] = "AddExpense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Expense</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddExpense">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseAmount" class="control-label"></label>
                <input asp-for="ExpenseAmount" class="form-control" />
                <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



